{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{% block paragraph %}
  {% block content %}
    {% include 'drupalx_theme:stat' with {
        modifier: '',
        media: content.field_custom_icon|field_value ? content.field_custom_icon : content.field_icon,
        heading: content.field_title|render,
        body: content.field_summary|render,
      } only
    %}
  {% endblock %}
{% endblock paragraph %}
