{{ attach_library('drupalx_theme/site-footer') }}

<div class="bg-black px-2 py-4 {{ modifier }}">
  <div class="container">
    <div class="row d-lg-flex flex-wrap justify-content-lg-between align-items-center">
      <div class="col-lg-3 footer-logo mb-2">
        {%
          include '@drupalx_theme/03 - general/logo/logo.twig' with { site_logo: site_logo } only
        %}
      </div>
      <div class="col-lg-8 text-right justify-lg-content-end">
        <div class="mb-2">
          {% block content %}
            {%
              include '@drupalx_theme/04 - navigation/menu/menu.twig' with {
                modifier: "d-lg-flex justify-content-lg-end",
                items: links,
                item_modifier: link_item_modifier
              } only
            %}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>
</div>
