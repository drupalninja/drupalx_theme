{{ attach_library('drupalx_theme/gallery-lightbox') }}

{% if section_title %}
  {%
    include '@drupalx_theme/03 - general/heading/heading.twig' with {
      "heading": {
        "title": section_title,
        "heading_level": 2,
        "modifier": "mb-4 text-md-center"
      }
    } only
  %}
{% endif %}

<div class="d-flex justify-content-center">
  {% if intro_text %}
    {%
      include '@drupalx_theme/03 - general/rich-text/rich-text.twig' with {
        "body_text": intro_text,
        "modifier": "text-md-center pb-3 col-md-8"
      } only
    %}
  {% endif %}
</div>

<div class="row">
  {% block gallery_items %}
    {% for item in items %}
      {%
        include '@drupalx_theme/01 - editorial/gallery-lightbox/gallery-lightbox-item.twig' with {
          "media": item.media,
          "media_thumb": item.media_thumb,
          "media_description": item.media_description,
          "id": item.id,
        } only
      %}
    {% endfor %}
  {% endblock %}
</div>
