{#
/**
 * @file
 * Default theme implementation to display a block content.
 *
 * @see template_preprocess_block_content_template()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'block-content',
    'block-content--type-' ~ bundle|clean_class,
    'block-content--' ~ id,
    'block-content--view-mode-' ~ view_mode|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
    {% embed '@drupalx_theme/01 - editorial/carousel/carousel.twig' with { content: content, id: id, modifier: "" } only %}
      {% block carousel_items %}
        {{ content.field_carousel_item }}
      {% endblock carousel_items %}
    {% endembed %}
  {% endblock %}
</div>
